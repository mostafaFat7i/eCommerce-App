<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerRegistrationActivity">

    
    <ImageView
        android:id="@+id/seller_register_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/seller"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/seller_register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Registration Form"
        android:gravity="center"
        android:layout_below="@+id/seller_register_img"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/holo_green_dark"
        />
    <EditText
        android:id="@+id/seller_regester_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/seller_register_title"
        android:hint="Name..."
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/seller_regester_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/seller_regester_name"
        android:hint="Phone..."
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/seller_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/seller_regester_phone"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/seller_register_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_register_email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        >
    <EditText
        android:id="@+id/seller_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <EditText
        android:id="@+id/seller_regester_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/seller_register_password_layout"
        android:hint="Shop - Bussiness Address..."
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/seller_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_regester_address"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Register"
        android:onClick="RegisterSeller"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textAllCaps="false"/>


    
</RelativeLayout>