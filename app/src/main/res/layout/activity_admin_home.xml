<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">

    <TextView
        android:id="@+id/admin_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcom Admin"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/maintaint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:onClick="GoToMaintainProducts"
        android:layout_below="@+id/admin_home_title"
        android:background="@drawable/buttons"
        android:text="Maintain Products"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/check_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="Check New Orders"
        android:onClick="GoToAdminNewOrders"
        android:layout_below="@+id/maintaint_btn"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="17sp"/>
    <Button
        android:id="@+id/check_approve_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="Approve New Products"
        android:onClick="GoToAdminNewProducts"
        android:layout_below="@+id/check_order_btn"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="17sp"/>


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="Logout"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:onClick="Logout"
        android:layout_below="@+id/check_approve_order_btn"
        android:textAllCaps="false"
        android:textSize="17sp"/>

</RelativeLayout>